
@{
    ViewData["Title"] = "ConfirmEmail";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card" style="height: 12em;">
            <div class="card-header">
                <h3>Thank you for confirming your email!</h3>
                <a asp-controller="Account" asp-action="Login" style="border-radius: 5px; background-color: #FFC312; color:black" class="btn justify-content-center">Go To Login Page</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


