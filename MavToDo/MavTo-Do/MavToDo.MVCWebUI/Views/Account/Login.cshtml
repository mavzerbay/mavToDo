@model MavToDo.MVCWebUI.Models.Account.LoginViewModel
@using System.Threading.Tasks
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>
                    
                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-info" role="alert">@TempData["message"]</div>
                    }
                </div>
                <div class="card-body">
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input asp-for="UserName" class="form-control">

                        </div>

                        <span asp-validation-for="Password" class="text-danger small"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Password" class="form-control">
                        </div>
                        <div class="row align-items-center remember">
                            <input asp-for="RememberMe">@Html.DisplayNameFor(model => model.RememberMe)
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Don't have an account?<a asp-action="Register">Sign Up</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a asp-action="ForgotPassword">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
